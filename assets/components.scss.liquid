// The slide show

.slide{
    margin:2rem 0!important;
}

.h4{
    font-size: 1.5rem;
    text-transform: uppercase;
    margin-bottom: 0;
}
.topnav{
    background-color: #F5F5F5;
    display:flex;
    align-items: center;
    justify-content:space-between;
    padding-top:0.6rem;
    padding-bottom: 0.6rem;

}
.social-link{
    display:block;
}
.whatsapp{
    display: flex;
    align-items: center;
}


.social-icon{
    width:2.3rem;
    display:inline-block;
    height:2.3rem;
    margin-right:0.5rem;
}
.social-icon2{
    width:3.7rem;
    height: 3.7rem;
    display:inline-block;
    margin-right:0.5rem;
}
.social-icon:not(:last-of-type){
    margin-right:100px;
}

.side-icons{
    margin:0!important;
    width:2rem;
    height:2rem;
    padding:0;
}

